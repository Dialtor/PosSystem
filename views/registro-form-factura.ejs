        <div class="name__page">
            <i class="fab fa-buffer works"></i>
            <h4>Sistema POS</h4>
        </div>

        <div class="options__menu">

            <a href="index2.html" class="selected">
                <div class="option">
                    <i class="fas fa-home" title="Inicio" style="color:darkgoldenrod;"></i>
                    <h4>Inicio</h4>
                </div>
            </a>

            <a href="perfil.html">
                <div class="option">
                    <i class="far fa-file" title="Portafolio"></i>
                    <h4>Perfil</h4>
                </div>
            </a>
            <a href="../Pages/registro-form-producto.html">
                <div class="option">
                    <i class="fas fa-archive" title="Registros"></i>
